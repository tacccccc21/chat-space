.main-chat
  .main-chat_group-info
    .main-chat_group-info_test
      = @group.name
      .main-chat_group-info_test_menber
        Menber:  
        %ul
          - @group.users.each do |user|
            %li= user.name
    .main-chat_group-info_edit
      = link_to "Edit", edit_group_path(@group)
        
  
  .main-chat__space
    = render @messages

  .main-chat__message-form
    = form_for [@group, @message] do |f|
      .main-chat__message-form__input
        = f.text_field :content, class: 'main-chat__message-form__input__box__text', placeholder: 'type a message'
        
        = f.label :image, class: 'icon' do
          = icon('fas', 'image', class: 'fa fa-image')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'